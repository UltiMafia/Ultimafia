{
  "apps": [
    {
      "name": "www",
      "script": "./bin/www",
      "instances": 1,
      "time": true,
      "max_restarts": 2,
      "node_args": "--inspect=0.0.0.0:9230",
      "watch": true,
      "ignore_watch": [
        "node_modules",
        "*.log",
        "./logs",
